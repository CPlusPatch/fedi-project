        "jose": "^5.9.6",
        "linkify-html": "^4.1.4",
        "linkify-string": "^4.1.4",
        "linkifyjs": "^4.1.4",
        "magic-regexp": "^0.8.0",
        "markdown-it": "^14.1.0",
        "markdown-it-anchor": "^9.2.0",
        "markdown-it-container": "^4.0.0",
        "markdown-it-toc-done-right": "^4.2.0",
        "mime-types": "^2.1.35",
        "mitata": "^1.0.16",
        "oauth4webapi": "^3.1.3",
        "ora": "^8.1.1",
        "pg": "^8.13.1",
        "prom-client": "^15.1.3",
        "qs": "^6.13.1",
        "sharp": "^0.33.5",
        "sonic-channel": "^1.3.1",
        "string-comparison": "^1.3.0",
        "stringify-entities": "^4.0.4",
        "strip-ansi": "^7.1.0",
        "table": "^6.8.2",
        "unzipit": "^1.4.3",
        "uqr": "^0.1.2",
        "xss": "^1.0.15",
        "zod": "^3.23.8",
        "zod-validation-error": "^3.4.0"
    }
}
